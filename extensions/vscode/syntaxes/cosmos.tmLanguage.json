{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "cosmos",
    "scopeName": "source.cosmos",
    "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#requireStatements" },
        { "include": "#packetDef"},
        { "include": "#packetItem"},
        { "include": "#itemProperties" }
      ],
    "repository":{
        "comments": {
            "patterns": [
                {
                    "description": "Line Comment",
                    "match": "^#.*",
                    "name": "comment.line.number-sign"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "description": "Single Quoted String",
                    "begin": "'",
                    "end": "'",
                    "name": "string.quoted.single"
                },
                {
                    "description": "Double Quoted String",
                    "begin": "\"",
                    "end": "\"",
                    "name": "string.quoted.double"
                },
                {
                    "match": "(?<=UNITS\\s)\\b\\S+\\s\\S+\\s*$",
                    "name": "string.unquoted"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "match": "0x[a-zA-Z0-9]+",
                    "name": "constant.numeric"
                },
                {
                    "match": "[0-9]+\\.[0-9]+",
                    "name": "constant.numeric"
                },
                {
                    "match": "[0-9]",
                    "name": "constant.numeric"
                }
            ]
        },
        "requireStatements": {
            "patterns": [
                {
                    "match": "(<%|%>)",
                    "name": "keyword.operator"
                },
                {
                    "match": "\\brequire\\b",
                    "name": "keyword.control"
                }
            ]
        },
        "packetDef": {
            "patterns": [
                {
                    "match": "^TELEMETRY\\b",
                    "name": "storage.type"
                },
                {
                    "match": "^COMMAND\\b",
                    "name": "storage.type"
                },
                {
                    "match": "(?<=TELEMETRY\\s)\\b\\S+(?=\\s)",
                    "name": "support.class"
                },
                {
                    "match": "(?<=COMMAND\\s)\\b\\S+(?=\\s)",
                    "name": "support.class"
                },
                {
                    "match": "(?<=\\s)\\b\\S+(?=\\sBIG_ENDIAN)",
                    "name": "variable.other"
                },
                {
                    "match": "(?<=\\s)\\b\\S+(?=\\sLITTLE_ENDIAN)",
                    "name": "variable.other"
                },
                {
                    "match": "\\b(BIG_ENDIAN|LITTLE_ENDIAN)\\b",
                    "name": "keyword.control"
                }
            ]
        },
        "packetItem": {
            "patterns": [
                {
                    "match": "^\\s{0,2}(APPEND_ID_|ID_)(ITEM|PARAMETER)\\b",
                    "name": "support.function"
                },
                {
                    "match": "^\\s{0,2}APPEND_(ITEM|PARAMETER)\\b",
                    "name": "storage.modifer"
                },
                {
                    "match": "^\\s{0,2}(ITEM|PARAMETER)\\b",
                    "name": "storage.modifer"
                },
                {
                    "match": "(?<=ITEM\\s)\\b\\S+(?=\\s)",
                    "name": "variable.parameter"
                },
                {
                    "match": "(?<=APPEND_ITEM\\s)\\b\\S+(?=\\s)",
                    "name": "variable.parameter"
                },
                {
                    "match": "(?<=PARAMETER\\s)\\b\\S+(?=\\s)",
                    "name": "variable.parameter"
                },
                {
                    "match": "(?<=APPEND_PARAMETER\\s)\\b\\S+(?=\\s)",
                    "name": "variable.parameter"
                },
                {
                    "match": "\\b(INT|UINT|FLOAT|DERIVED|STRING|BLOCK)\\b",
                    "name": "storage.type"
                }
            ]
        },
        "itemProperties": {
            "patterns": [
                {
                    "match": "^\\s{0,4}(STATE|FORMAT_STRING|READ_CONVERSION|UNITS)\\b",
                    "name": "keyword.control"
                },
                {
                    "match": "(?<=STATE\\s)\\b\\S+(?=\\s)",
                    "name": "variable.parameter"
                }
            ]
        }
    }
}