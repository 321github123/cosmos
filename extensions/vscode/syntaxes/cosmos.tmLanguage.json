{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "cosmos",
    "scopeName": "source.cosmos",
    "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#packetDef"},
        { "include": "#packetItem"}
      ],
    "repository":{
        "comments": {
            "patterns": [
                {
                    "description": "Line Comment",
                    "match": "^#.*",
                    "name": "comment.line.number-sign"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "description": "Single Quoted String",
                    "begin": "'",
                    "end": "'",
                    "name": "string.quoted.single"
                },
                {
                    "description": "Double Quoted String",
                    "begin": "\"",
                    "end": "\"",
                    "name": "string.quoted.double"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "match": "[0-9]",
                    "name": "constant.numeric"
                },
                {
                    "match": "[0-9]+\\.[0-9]+",
                    "name": "constant.numeric"
                }
            ]
        },
        "packetDef": {
            "patterns": [
                {
                    "match": "^TELEMETRY\\b",
                    "name": "storage.type"
                },
                {
                    "match": "^COMMAND\\b",
                    "name": "storage.type"
                },
                {
                    "match": "(?<=TELEMETRY\\s)\\b\\S+(?=\\s)",
                    "name": "support.class"
                },
                {
                    "match": "(?<=COMMAND\\s)\\b\\S+(?=\\s)",
                    "name": "support.class"
                },
                {
                    "match": "(?<=\\s)\\b\\S+(?=\\sBIG_ENDIAN)",
                    "name": "variable.other"
                },
                {
                    "match": "(?<=\\s)\\b\\S+(?=\\sLITTLE_ENDIAN)",
                    "name": "variable.other"
                },
                {
                    "match": "\\b(BIG_ENDIAN|LITTLE_ENDIAN)\\b",
                    "name": "keyword.control"
                }
            ]
        },
        "packetItem": {
            "patterns": [
                {
                    "match": "^\\s{1,2}(APPEND_ID_|ID_)(ITEM|PARAMETER)\\b",
                    "name": "support.function"
                },
                {
                    "match": "^\\s{1,2}APPEND_(ITEM|PARAMETER)\\b",
                    "name": "keyword.other"
                }
            ]
        }
    }
}